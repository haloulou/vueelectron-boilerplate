{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": { "@/*": ["./src/*"] }
    },
    "include": ["src/**/*.ts", "src/**/*.vue"]
}
